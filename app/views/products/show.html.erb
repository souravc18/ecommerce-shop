<div class="jumbotron">
  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <% @product.assignments.each do |a| %>
    <p>
    <%= a.color.color %> - <%= a.quantity %>
    </p>
  <% end %>


  <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-outline-secondary btn-sm" %> |
  <%= link_to 'Back', products_path, class:"btn btn-outline-secondary btn-sm" %>
</div>
