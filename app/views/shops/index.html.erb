<% if signed_in? && current_user %>  
  <section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <div class="card">
            <div class="card-body p-4">

              <div class="row">

                <div class="col-lg-7">
                  <h5 class="mb-3"><a href="#!" class="text-body"><i
                        class="fas fa-long-arrow-alt-left me-2"></i>WELCOME <%= current_user.email.split('@')[0].capitalize %> </a></h5>
                  <hr>

                  <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                      <p class="mb-1">Shopping cart</p>
                    </div>
                    <div>
                    <div id="cart" class="btn btn-outline-success">
                      <%= render 'carts/cart'%>
                    </div>
                    </div>
                  </div>
                  <% @products.each do |product| %>
                    <div class="card mb-3" style="width:850px;">
                      <div class="card-body">
                        <div class="d-flex justify-content-between">
                          <div class="d-flex flex-row align-items-center">
                            <div>
                              <img
                                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img1.webp"
                                class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                            </div>
                          </div>

                          <div class="ms-3">
                              <%= product.title %>
                            </div>

                          <div style="width: 80px;">
                            <%= product.price %>
                          </div>

                          <div style="width: 80px;">
                            <%= link_to 'Show', shop_path(product), class:"btn btn-secondary btn-sm" %>
                          </div>

                          <div style="width: 400px;">
                            <%= form_for @order_item, remote: true  do |f|%>
                              <%= f.hidden_field :product_id, :value => product.id %>
                              <%= f.number_field :quantity, :value => 1, :min =>  1%>
                              <%= f.submit "Add to Cart "%>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<% else %>
  <section class="vh-100" style="background-color: #fdccbc;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <p><span class="h2">Shopping Cart </span></p>

        <div class="card mb-4">
          <div class="card-body p-4">

            <div class="row align-items-center">
              <h1>Hey There! </h1>
            </div>
            <div class="row align-items-center">
              <p>Please <b>Sign In</b></p>
            </div>
            <div class="row align-items-center">
              <p>If you don't have any accoubt than click on <b>Sign Up</b> for create new account</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>